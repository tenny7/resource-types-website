{
  "name": "sums",
  "version": "0.2.4",
  "description": "A checksum generator for Node streams",
  "author": "Zab",
  "license": "MIT",
  "homepage": "https://github.com/zab/sums#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zab/sums.git"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    "stream",
    "checksum",
    "shasum",
    "hash",
    "sha1",
    "snapshot",
    "filesize",
    "compress",
    "compression",
    "gzip",
    "gunzip"
  ],
  "files": [
    "bin/",
    "lib/",
    "license",
    "readme.md"
  ],
  "bin": {
    "sums": "bin/sums"
  },
  "main": "lib/index.js",
  "scripts": {
    "test:lint": "standard --verbose | snazzy",
    "test:unit": "mocha src/**/*.test.js -r babel-register",
    "test": "npm-run-all test:*",
    "build": "rm -rf lib && babel src -d lib --ignore '**/*.test.js' --no-comments --compact",
    "watch": "npm run build -- -w",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "babel-runtime": "6.18.0",
    "concat-stream": "1.5.2",
    "is-stream": "1.1.0",
    "through2": "2.0.1",
    "tmp": "0.0.31"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-latest": "6.16.0",
    "babel-register": "6.18.0",
    "chai": "3.5.0",
    "mocha": "3.2.0",
    "npm-run-all": "3.1.1",
    "snazzy": "5.0.0",
    "standard": "8.6.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  },
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  }
}
